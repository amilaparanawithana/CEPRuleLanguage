<query>
    <select>
        <attributes>
            <attribute as="rn">roomNo</attribute>
            <attribute>deviceID</attribute>
        </attributes>
        <functions>
            <function func="avg" as="avgTemp">temp</function>
        </functions>
    </select>

    <from>
        <streams>
            <stream as="tmps">
                <name>TempStream</name>
                <window func="time">
                    <parameters>
                        <parameter>10 min</parameter>
                    </parameters>
                </window>
                <filter>roomNo > 110</filter>
            </stream>

            <stream as="trfs">
                <name>TrafficStream</name>
                <window func="time">
                    <parameters>
                        <parameter>10 min</parameter>
                    </parameters>
                </window>
                <filter>roadId = 2001</filter>
            </stream>

        </streams>
    </from>
    <where>tmps.locId = trfs.locId</where>
</query>